{
    "name": "api-devopsreminders",
    "version": "0.0.0",
    "description": "The DevOpsReminders API service",
    "main": "build/app.js",
    "repository": "git@github.com:DevOpsReminders/api-devopsreminders.git",
    "author": "Angel S. Moreno <angel.moreno@dotdashmdp.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "tsc --build tsconfig.build.json",
        "prebuild": "yarn install && rimraf build",
        "start": "cross-env NODE_ENV=production TS_NODE_BASEURL=./build node -r tsconfig-paths/register build/app.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "lint": "yarn eslint . --ext js,ts,json --cache",
        "lint:fix": "yarn eslint . --ext js,ts,json --fix --cache",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/*.spec.ts'",
        "test:unit": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/unit/**/*.spec.ts'",
        "test:coverage": "nyc npm run test"
    },
    "engines": {
        "node": "v16.18"
    },
    "dependencies": {
        "@decorators/di": "^1.0.3",
        "@decorators/express": "^2.6.0",
        "compression": "^1.7.4",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0",
        "express": "^4.18.2",
        "http-errors": "^2.0.0",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "tsconfig-paths": "^4.1.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.4",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/http-errors": "^2.0.1",
        "@types/lodash": "^4.14.191",
        "@types/mocha": "^10.0.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.13",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "chai": "^4.3.7",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "nyc": "^15.1.0",
        "prettier": "^2.8.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    }
}
