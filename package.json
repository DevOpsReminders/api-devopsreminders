{
    "name": "api-devopsreminders",
    "version": "0.0.0",
    "description": "The DevOpsReminders API service",
    "main": "build/app.js",
    "repository": "git@github.com:DevOpsReminders/api-devopsreminders.git",
    "author": "Angel S. Moreno <angel.moreno@dotdashmdp.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "tsc --build tsconfig.build.json",
        "prebuild": "yarn install && rimraf build",
        "start": "cross-env NODE_ENV=production TS_NODE_BASEURL=./build node -r tsconfig-paths/register build/app.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "lint": "yarn eslint . --ext js,ts,json --cache",
        "lint:fix": "yarn eslint . --ext js,ts,json --fix --cache",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "mochaTs": "cross-env NODE_ENV=testing mocha",
        "test": "yarn mochaTs 'tests/**/*.spec.ts'",
        "test:unit": "yarn mochaTs 'tests/unit/**/*.spec.ts'",
        "test:e2e": "yarn mochaTs 'tests/e2e/**/*.spec.ts'",
        "test:coverage": "nyc npm run test:unit",
        "docker": "docker-compose -p apidevrem --env-file .env --file ./docker/docker-compose.yml",
        "docker:start": "yarn docker up --remove-orphans",
        "docker:restart": "yarn docker restart",
        "docker:stop": "yarn docker stop",
        "typeorm": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
        "db:migration:status": "yarn typeorm migration:show -d src/database/data-source.ts",
        "db:migration:generate": "yarn typeorm migration:generate -d ./src/database/data-source.ts -p ./src/database/migrations/diff",
        "db:migration:run": "yarn typeorm migration:run -d ./src/database/data-source.ts",
        "db:migration:revert": "yarn typeorm migration:revert -d ./src/database/data-source.ts",
        "db:seed:run": "ts-node -r tsconfig-paths/register src/database/seedRunner.ts",
        "prepare": "husky install"
    },
    "engines": {
        "node": "v16.18"
    },
    "dependencies": {
        "@decorators/di": "^1.0.3",
        "@decorators/express": "^2.6.0",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "generate-password": "^1.7.0",
        "http-errors": "^2.0.0",
        "inflection": "^2.0.0",
        "is-image-header": "^1.0.3",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "mysql2": "^2.3.3",
        "nodemailer": "^6.8.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "tsconfig-paths": "^4.1.1",
        "typeorm": "^0.3.11",
        "typeorm-naming-strategies": "^4.1.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^4.3.4",
        "@types/chai-like": "^1.1.1",
        "@types/chai-things": "^0.0.35",
        "@types/compression": "^1.7.2",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.14",
        "@types/http-errors": "^2.0.1",
        "@types/inflection": "^1.13.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/lodash": "^4.14.191",
        "@types/mocha": "^10.0.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.13",
        "@types/nodemailer": "^6.4.6",
        "@types/nodemailer-stub-transport": "^1.1.5",
        "@types/passport": "^1.0.11",
        "@types/passport-jwt": "^3.0.7",
        "@types/sinon": "^10.0.13",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "chai": "^4.3.7",
        "chai-like": "^1.1.1",
        "chai-things": "^0.2.0",
        "commander": "^9.4.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.0",
        "lint-staged": "^13.1.0",
        "mocha": "^10.1.0",
        "nodemailer-stub-transport": "^1.1.0",
        "nodemon": "^2.0.20",
        "nyc": "^15.1.0",
        "prettier": "^2.8.1",
        "rimraf": "^3.0.2",
        "sinon": "^15.0.1",
        "sqlite3": "^5.1.2",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    },
    "lint-staged": {
        "*.{js,ts, json}": "eslint"
    }
}
